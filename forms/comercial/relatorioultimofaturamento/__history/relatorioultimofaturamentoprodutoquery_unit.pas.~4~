{$R *.dfm}

uses FuncaoSistema_Unit, FuncaoRestricoesInformacoes_Unit,
  RelatorioUltimoFaturamentoProduto_Unit;

function TRelatorioUltimoFaturamentoProduto_Query.ImprimirRelatorio: Boolean;
Var
   VLC_Select, VLC_OrderBy : String;
begin
  inherited;

  VLC_Select := VLC_Select + ' Select  ' + #13;
  VLC_Select := VLC_Select + ' 	Grupo, Item, Produto_ID, Produto,' + #13;
  VLC_Select := VLC_Select + ' 	UltimaVenda_Recno, UltimaVendaNota as Nota,' + #13;
  VLC_Select := VLC_Select + ' 	UltimaVendaCliente as Cliente, UltimaVendaUF as UF, UltimaVendaVendedor_FK as Vendedor_FK, ' + #13;
  VLC_Select := VLC_Select + ' 	UltimaVendaGerente as Gerente,	UltimaVendaPreco as Preco, ' + #13;
  VLC_Select := VLC_Select + ' 	UltimaVendaEmissao, DATEDIFF(Day,UltimaVendaEmissao,GetDate()) as QtdDias,' + #13;
  VLC_Select := VLC_Select + ' 	Recno, Empresa ' + #13;
  VLC_Select := VLC_Select + ' from BomixBI.dbo.[Pcp_TB_Produto] Produto (nolock) ' + #13;
  VLC_Select := VLC_Select + ' Where Empresa = ' + '''' + Copy(Sys_FuncaoSistema.PNL_EmpresaTotvs.Caption,1,4) + '''' + #13;
  VLC_Select := VLC_Select + ' AND UltimaVendaNota is not NULL ' + #13;
  VLC_Select := VLC_Select + ' AND Grupo <> ' + '''' + '' + '''' + #13;
  VLC_Select := VLC_Select + ' AND Bloqueado = ' + '''' + 'Não' + '''' + #13;

  if Sys_FuncaoSistema.TXT_RestricaoComercial.Caption = 'Sim' then
  begin
       VLC_Select := VLC_Select + Sys_FuncaoRestricoesInformacoes.GetRestricaoComercial('UltimaVendaVendedor_FK');
  end;

  If RelatorioUltimoFaturamentoProduto.CBX_OrdenarPor.Text = 'TEMPO DA ÚLTIMA COMPRA - CRESCENTE' then VLC_OrderBy := ' Order by UltimaVendaEmissao ' + #13;
  If RelatorioUltimoFaturamentoProduto.CBX_OrdenarPor.Text = 'TEMPO DA ÚLTIMA COMPRA - DESCRESCENTE' then VLC_OrderBy := ' Order by UltimaVendaEmissao Desc ' + #13;
  If RelatorioUltimoFaturamentoProduto.CBX_OrdenarPor.Text = 'CLIENTE' then   VLC_OrderBy := ' Order by UltimaVendaCliente ' + #13;
  If RelatorioUltimoFaturamentoProduto.CBX_OrdenarPor.Text = 'GERÊNCIA' then   VLC_OrderBy := ' Order by UltimaVendaGerente ' + #13;

  RelatorioUltimoFaturamentoProduto.MemoSQL.Lines.Text := VLC_Select + ' ' + RelatorioUltimoFaturamentoProduto.GetSQLWhere + ' ' + VLC_Orderby;

  CDS.Close;
  Query.Close;
  Query.SQL.Clear;
  Query.SQL.Text := VLC_Select + ' ' + RelatorioUltimoFaturamentoProduto.GetSQLWhere + ' ' + VLC_Orderby;
  CDS.Open;

  ppLBL_Data.Caption :=  'Impresso por: ' + Sys_FuncaoSistema.PNL_UsuarioAtivo.Caption + ' // ' + 'Data Impressão: ' + DateTimeToStr(Date());

   If CDS.RecordCount = 0 Then
   begin
      Result := False;
   end
   else
   begin
      Result := True;
   end;

end;

end.
