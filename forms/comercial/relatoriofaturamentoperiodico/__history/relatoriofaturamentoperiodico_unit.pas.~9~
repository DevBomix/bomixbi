procedure TRelatorio_FaturamentoPeriodico.BNT_ConfirmarClick(Sender: TObject);
Var
   VLC_Select : String;
begin

  VLC_Select := '';

  if CBX_TipoRelatorio.Text = 'RELATÓRIO DE FATURAMENTO - DIÁRIO' then
  begin
      RelatorioFaturamentoDiario;
  end;

  if CBX_TipoRelatorio.Text = 'RELATÓRIO DE FATURAMENTO - MENSAL' then
  begin
      RelatorioPeriodicoMensal;
  end;

  if CBX_TipoRelatorio.Text = 'RELATÓRIO DE FATURAMENTO - BIMESTRAL' then
  begin
      RelatorioPeriodicoBimestral;
  end;

end;

