    ppDBText17: TppDBText;
    ppLabel1: TppLabel;
    ppLabel3: TppLabel;
    ppLabel4: TppLabel;
    ppGroupFooterBand4: TppGroupFooterBand;
    ppDBText1: TppDBText;
    ppDBText3: TppDBText;
    ppLabel2: TppLabel;
